<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
    <br>
    <h3>Create a new list</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" >
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input
            type="text"  name="listing[title]" class="form-control" required/>


        </div>
        <div class="mb-2">
             <label for="description" class="form-label" >Description</label>
             <textarea name="listing[description]" id="" class="form-control" required></textarea>
        </div >
        <div class="mb-2">
            <label for="image" class="form-label">Image link</label>
            <input type="text" name="listing[image][url]"  class="form-control" value="https://images.unsplash.com/photo-1518684079-3c830dcef090?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8ZHViYWl8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60"  >
        </div>
        <div class="row">
            <div class="mb-3 col-4"  >
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" class="form-control"required>
            </div>
        <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" placeholder="enter name of country" name="listing[country]" class="form-control" required><br>
        </div>

        </div>

        <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" placeholder="enter location" name="listing[location]" class="form-control" required><br>

        </div>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</div>
</div>


