<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form
        method="post"
         action="/listings/<%=listing._id%>?_method=PUT"
         class="needs-validation"
         novalidate
         enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text"  name="listing[title]" value="<%=listing.title%>" class="form-control" required><br>
            <div class="valid-feedback">Title looks good</div>
            <div class="invalid-feedback">Please enter the title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">Please enter a short description/div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Original Listing Image:</label>
            <img class="form-control" src="<%=originalImageUrl %>" >
        </div>
        <div>
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image][url]" class="form-control"value="<%=listing.image.url%>" >
            <div class="invalid-feedback">Please enter a valid link for image</div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label for="price" class="form-label" >Price</label>
                <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required><br>
            </div>
            <div>
                <label for="country" class="form-label">Country</label>
                <input type="text" value="<%=listing.country%>" name="listing[country]%>" class="form-control" required><br>
                <div class="invalid-feedback">Country should be valid</div>
            </div>
        </div>
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text"  value="<%=listing.location%>" name="listing[location]" class="form-control" required><br>
            <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark edit-btn">Edit</button>

    </form>
 </div>
</div>
<script src="/js/script.js"></script>

